ANTI_SPAM_GLOBAL_PER_HOUR=600                # Reduced from 1000 for safety
ANTI_SPAM_GLOBAL_PER_DAY=8000                # Daily global limit
ANTI_SPAM_DUPLICATE_WINDOW=120000            # Extended to 2 minutes
ANTI_SPAM_RAPID_FIRE=3                       # Reduced from 5 for safety
ANTI_SPAM_RAPID_FIRE_WINDOW=10000            # 10 seconds window
ANTI_SPAM_USER_COOLDOWN=3                    # Reduced from 5 for quicker recovery
ANTI_SPAM_GLOBAL_COOLDOWN=5                  # Increased for safety
ANTI_SPAM_EMERGENCY_BRAKE=true               # Critical for ban prevention
ANTI_SPAM_EMERGENCY_THRESHOLD=50             # Reduced from 100 for safety

# Typing Manager Configuration - FASTER SETTINGS
