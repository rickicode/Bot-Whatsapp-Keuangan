{
  "name": "WhatsApp Financial Bot",
  "description": "Bot WhatsApp untuk manajemen keuangan dengan integrasi AI DeepSeek",
  "repository": "https://github.com/yourusername/whatsapp-financial-bot",
  "logo": "https://node-js-sample.herokuapp.com/node.png",
  "keywords": [
    "whatsapp",
    "financial",
    "bot",
    "ai",
    "deepseek",
    "expense-tracker",
    "indonesia"
  ],
  "image": "heroku/nodejs",
  "stack": "heroku-22",
  "buildpacks": [
    {
      "url": "https://github.com/jontewks/puppeteer-heroku-buildpack"
    },
    {
      "url": "heroku/nodejs"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:mini",
      "as": "DATABASE"
    }
  ],
  "env": {
    "NODE_ENV": {
      "description": "Environment mode",
      "value": "production"
    },
    "DATABASE_TYPE": {
      "description": "Database type (sqlite3 or postgresql)",
      "value": "postgresql"
    },
    "ENABLE_AI_FEATURES": {
      "description": "Enable AI features (true/false)",
      "value": "true"
    },
    "DEEPSEEK_API_KEY": {
      "description": "DeepSeek AI API Key untuk fitur AI",
      "required": false
    },
    "DEEPSEEK_BASE_URL": {
      "description": "DeepSeek API Base URL",
      "value": "https://api.deepseek.com"
    },
    "BACKUP_PATH": {
      "description": "Path untuk backup files",
      "value": "./backups"
    },
    "LOG_LEVEL": {
      "description": "Log level (error, warn, info, debug)",
      "value": "info"
    },
    "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": {
      "description": "Skip Chromium download for Puppeteer",
      "value": "true"
    },
    "PUPPETEER_EXECUTABLE_PATH": {
      "description": "Path to Chrome executable",
      "value": "/app/.apt/usr/bin/google-chrome"
    }
  },
  "scripts": {
    "postdeploy": "npm run setup && npm run setup-db"
  },
  "environments": {
    "review": {
      "addons": [
        "heroku-postgresql:mini"
      ]
    },
    "test": {
      "addons": [
        "heroku-postgresql:mini"
      ],
      "env": {
        "NODE_ENV": "test"
      }
    }
  }
}