# Example Docker Environment Variables for WhatsApp Financial Bot
# Copy this file to .env and fill in your values

# ================================
# REQUIRED CONFIGURATION
# ================================

# Bot Admin Phone (Required - with country code, no spaces or symbols)
BOT_ADMIN_PHONE=+6281234567890

# AI Provider API Key (Required - choose one)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
# OPENAI_API_KEY=your_openai_api_key_here
# GROQ_API_KEY=your_groq_api_key_here
# GOOGLE_API_KEY=your_google_api_key_here

# ================================
# DATABASE CONFIGURATION
# ================================

# Database Type (sqlite3 or postgres)
DATABASE_TYPE=sqlite3

# SQLite Configuration (default)
DB_PATH=/app/data/financial.db

# PostgreSQL Configuration (if using PostgreSQL)
# DATABASE_TYPE=postgres
# DATABASE_HOST=your-postgres-host
# DATABASE_PORT=5432
# DATABASE_NAME=financial_bot
# DATABASE_USER=postgres
# DATABASE_PASSWORD=your-postgres-password
# DATABASE_SSL=true

# ================================
# BOT CONFIGURATION
# ================================

BOT_NAME=Bot Keuangan Pribadi
AI_PROVIDER=deepseek
NODE_ENV=production
PORT=3000
TZ=Asia/Jakarta
LOCALE=id-ID

# ================================
# AI PROVIDER SETTINGS
# ================================

# DeepSeek Configuration
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_BASE_URL=https://api.deepseek.com

# OpenAI Configuration
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_BASE_URL=https://api.openai.com

# ================================
# FEATURE FLAGS
# ================================

ENABLE_AI_FEATURES=true
ENABLE_OCR=false
ENABLE_REMINDERS=true
ASK_CATEGORY_IF_UNKNOWN=true

# ================================
# ANTI-SPAM PROTECTION
# ================================

ANTI_SPAM_USER_PER_MINUTE=15
ANTI_SPAM_GLOBAL_PER_MINUTE=75
ANTI_SPAM_EMERGENCY_BRAKE=true
ANTI_SPAM_EMERGENCY_THRESHOLD=90

# ================================
# BACKUP CONFIGURATION
# ================================

BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7

# ================================
# MONITORING & LOGGING
# ================================

LOG_LEVEL=info
HEALTH_CHECK_INTERVAL=60
LOG_ROTATION_SIZE=50M
LOG_RETENTION_DAYS=7

# ================================
# SECURITY SETTINGS
# ================================

# These will be auto-generated if not provided
# SESSION_SECRET=your_session_secret_here
# ENCRYPTION_KEY=your_encryption_key_here

# ================================
# WEBHOOK CONFIGURATION (Optional)
# ================================

# WEBHOOK_URL=https://your-webhook-url.com/webhook
# WEBHOOK_SECRET=your_webhook_secret

# ================================
# LOCALIZATION
# ================================

DEFAULT_LANGUAGE=id
DEFAULT_CURRENCY=IDR
CURRENCY_SYMBOL=Rp

# ================================
# PERFORMANCE TUNING
# ================================

NODE_OPTIONS=--max-old-space-size=384
NPM_CONFIG_FUND=false
NPM_CONFIG_AUDIT=false

# ================================
# DOCKER SPECIFIC
# ================================

CONTAINER_NAME=whatsapp-bot
DEPLOYMENT_ENV=docker