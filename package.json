{
  "name": "whatsapp-financial-bot",
  "version": "1.0.0",
  "description": "WhatsApp bot for financial management with DeepSeek AI integration",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "setup": "node scripts/setup.js",
    "setup-db": "node scripts/setup-database.js",
    "backup": "node scripts/backup.js",
    "test": "jest",
    "docker:build": "docker build -t whatsapp-financial-bot .",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:serverless": "docker-compose -f docker-compose.serverless.yml up -d",
    "docker:vps": "docker-compose up -d",
    "docker:logs": "docker-compose logs -f",
    "docker:stop": "docker-compose down",
    "docker:clean": "docker-compose down --volumes --remove-orphans"
  },
  "keywords": [
    "whatsapp",
    "financial",
    "bot",
    "ai",
    "deepseek",
    "expense-tracker"
  ],
  "author": "Financial Bot Developer",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "fs-extra": "^11.3.0",
    "helmet": "^7.2.0",
    "moment": "^2.30.1",
    "node-cron": "^3.0.3",
    "pg": "^8.16.0",
    "qrcode-terminal": "^0.12.0",
    "sharp": "^0.33.5",
    "sqlite3": "^5.1.7",
    "tesseract.js": "^5.1.1",
    "whatsapp-web.js": "^1.30.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
