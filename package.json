{
  "name": "whatsapp-financial-bot",
  "version": "1.0.0",
  "description": "WhatsApp bot for financial management with AI integration - EasyPanel optimized",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "backup": "node scripts/backup.js",
    "migrate": "node scripts/migrate.js migrate",
    "migrate:fresh": "node scripts/migrate.js fresh",
    "migrate:seed": "node scripts/migrate.js seed",
    "migrate:help": "node scripts/migrate.js help",
    "db:fresh": "npm run migrate:fresh",
    "db:migrate": "npm run migrate",
    "db:seed": "npm run migrate:seed",
    "cleanup:stats": "node scripts/cleanup-sessions.js stats",
    "cleanup:sessions": "node scripts/cleanup-sessions.js cleanup",
    "cleanup:force": "node scripts/cleanup-sessions.js force-clean",
    "cleanup:detail": "node scripts/cleanup-sessions.js detail",
    "antispam:stats": "node scripts/anti-spam-monitor.js stats",
    "antispam:monitor": "node scripts/anti-spam-monitor.js monitor",
    "antispam:reset": "node scripts/anti-spam-monitor.js reset-emergency",
    "antispam:cooldown": "node scripts/anti-spam-monitor.js remove-cooldown",
    "docker:build": "docker build -t whatsapp-financial-bot .",
    "docker:run": "docker run -d --name whatsapp-bot -p 3000:3000 --env-file .env -v $(pwd)/data:/app/data -v $(pwd)/logs:/app/logs whatsapp-financial-bot",
    "docker:start": "docker start whatsapp-bot",
    "docker:stop": "docker stop whatsapp-bot",
    "docker:restart": "docker restart whatsapp-bot",
    "docker:logs": "docker logs -f whatsapp-bot",
    "docker:shell": "docker exec -it whatsapp-bot /bin/bash",
    "docker:health": "docker exec whatsapp-bot /usr/local/bin/healthcheck.sh",
    "docker:remove": "docker stop whatsapp-bot && docker rm whatsapp-bot",
    "docker:clean": "docker system prune -f",
    "docker:test": "./test-simple-docker.sh",
    "easypanel:cleanup": "node scripts/cleanup-for-easypanel.js",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "test": "jest"
  },
  "keywords": [
    "whatsapp",
    "financial",
    "bot",
    "ai",
    "deepseek",
    "expense-tracker",
    "easypanel",
    "supabase"
  ],
  "author": "Financial Bot Developer",
  "license": "MIT",
  "dependencies": {
    "@whiskeysockets/baileys": "^6.7.18",
    "axios": "^1.7.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "fs-extra": "^11.0.0",
    "helmet": "^7.0.0",
    "moment": "^2.29.0",
    "node-cron": "^3.0.0",
    "pg": "^8.11.0",
    "qrcode": "^1.5.0",
    "qrcode-terminal": "^0.12.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
