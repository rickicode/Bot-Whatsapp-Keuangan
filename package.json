{
  "name": "whatsapp-financial-bot",
  "version": "1.0.0",
  "description": "WhatsApp bot for financial management with AI integration - EasyPanel optimized",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "backup": "node scripts/backup.js",
    "migrate-baileys": "node scripts/update-dependencies.js",
    "cleanup:stats": "node scripts/cleanup-sessions.js stats",
    "cleanup:sessions": "node scripts/cleanup-sessions.js cleanup",
    "cleanup:force": "node scripts/cleanup-sessions.js force-clean",
    "cleanup:detail": "node scripts/cleanup-sessions.js detail",
    "antispam:stats": "node scripts/anti-spam-monitor.js stats",
    "antispam:monitor": "node scripts/anti-spam-monitor.js monitor",
    "antispam:reset": "node scripts/anti-spam-monitor.js reset-emergency",
    "antispam:cooldown": "node scripts/anti-spam-monitor.js remove-cooldown",
    "easypanel:build": "docker build -f Dockerfile.easypanel -t whatsapp-bot-easypanel .",
    "easypanel:start": "docker-compose -f docker-compose.easypanel.yml up -d",
    "easypanel:stop": "docker-compose -f docker-compose.easypanel.yml down",
    "easypanel:logs": "docker-compose -f docker-compose.easypanel.yml logs -f whatsapp-bot-easypanel",
    "easypanel:status": "docker exec whatsapp-bot-easypanel /usr/local/bin/supervisor-status.sh",
    "easypanel:cleanup": "node scripts/cleanup-for-easypanel.js",
    "test": "jest"
  },
  "keywords": [
    "whatsapp",
    "financial",
    "bot",
    "ai",
    "deepseek",
    "expense-tracker",
    "easypanel",
    "supabase"
  ],
  "author": "Financial Bot Developer",
  "license": "MIT",
  "dependencies": {
    "@whiskeysockets/baileys": "^6.7.18",
    "axios": "^1.7.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "fs-extra": "^11.0.0",
    "helmet": "^7.0.0",
    "moment": "^2.29.0",
    "node-cron": "^3.0.0",
    "pg": "^8.11.0",
    "qrcode": "^1.5.0",
    "qrcode-terminal": "^0.12.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
