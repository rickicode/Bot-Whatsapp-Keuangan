{
  "name": "whatsapp-financial-bot",
  "version": "1.0.0",
  "description": "WhatsApp bot for financial management with AI integration - EasyPanel optimized",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "backup": "node scripts/backup.js",
    "migrate": "node scripts/migrate.js migrate",
    "migrate:fresh": "node scripts/migrate.js fresh",
    "migrate:seed": "node scripts/migrate.js seed",
    "migrate:help": "node scripts/migrate.js help",
    "db:fresh": "npm run migrate:fresh",
    "db:migrate": "npm run migrate",
    "db:seed": "npm run migrate:seed",
    "cleanup:stats": "node scripts/cleanup-sessions.js stats",
    "cleanup:sessions": "node scripts/cleanup-sessions.js cleanup",
    "cleanup:force": "node scripts/cleanup-sessions.js force-clean",
    "cleanup:detail": "node scripts/cleanup-sessions.js detail",
    "antispam:stats": "node scripts/anti-spam-monitor.js stats",
    "antispam:monitor": "node scripts/anti-spam-monitor.js monitor",
    "antispam:reset": "node scripts/anti-spam-monitor.js reset-emergency",
    "antispam:cooldown": "node scripts/anti-spam-monitor.js remove-cooldown",
    "docker:build": "docker build -t whatsapp-financial-bot .",
    "docker:run": "docker run -d --name whatsapp-bot -p 3000:3000 --env-file .env -v $(pwd)/data:/app/data -v $(pwd)/logs:/app/logs whatsapp-financial-bot",
    "test": "jest",
    "test:api": "node scripts/test-api.js",
    "test:api:full": "node scripts/test-api.js test",
    "test:api:health": "node scripts/test-api.js health",
    "test:api:connect": "node scripts/test-api.js connect",
    "test:api:stats": "node scripts/test-api.js stats",
    "test:api:history": "node scripts/test-api.js history",
    "test:api:quick": "chmod +x scripts/test-api.sh && ./scripts/test-api.sh quick",
    "test:api:interactive": "chmod +x scripts/test-api.sh && ./scripts/test-api.sh interactive",
    "test:api:server": "chmod +x scripts/test-api.sh && ./scripts/test-api.sh server-check",
    "pool:monitor": "node scripts/monitor-pool-performance.js monitor",
    "pool:check": "node scripts/monitor-pool-performance.js check",
    "pool:load-test": "node scripts/monitor-pool-performance.js load-test",
    "pool:help": "node scripts/monitor-pool-performance.js help"
  },
  "keywords": [
    "whatsapp",
    "financial",
    "bot",
    "ai",
    "deepseek",
    "expense-tracker",
    "easypanel",
    "supabase"
  ],
  "author": "Financial Bot Developer",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.9.0",
    "baileys": "^6.7.18",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "fs-extra": "^11.3.0",
    "helmet": "^8.1.0",
    "moment": "^2.30.1",
    "node-cron": "^4.1.0",
    "pg": "^8.16.0",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
