{
  "name": "whatsapp-financial-bot",
  "version": "1.0.0",
  "description": "WhatsApp bot for financial management with DeepSeek AI integration",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "setup": "node scripts/setup.js",
    "setup-db": "node scripts/setup-database.js",
    "backup": "node scripts/backup.js",
    "migrate-baileys": "node scripts/update-dependencies.js",
    "migrate": "node scripts/migrate.js",
    "migrate-daily": "node scripts/migrate-daily-limits.js",
    "fresh-daily": "node scripts/fresh-daily-setup.js",
    "fix-registration": "node fix-registration-error.js",
    "test-admin": "node test-admin-features.js",
    "test-qr": "node test-integrated-qr.js",
    "migrate:fresh": "node scripts/migrate.js fresh",
    "migrate:reset": "node scripts/migrate.js reset",
    "migrate:seed": "node scripts/migrate.js seed",
    "migrate:status": "node scripts/migrate.js status",
    "test": "jest",
    "test:docker": "node scripts/test-docker.js",
    "docker:build": "docker build -t whatsapp-financial-bot .",
    "docker:test": "docker run --rm whatsapp-financial-bot node scripts/test-docker.js",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:serverless": "docker-compose -f docker-compose.serverless.yml up -d",
    "docker:vps": "docker-compose up -d",
    "docker:logs": "docker-compose logs -f",
    "docker:stop": "docker-compose down",
    "docker:clean": "docker-compose down --volumes --remove-orphans"
  },
  "keywords": [
    "whatsapp",
    "financial",
    "bot",
    "ai",
    "deepseek",
    "expense-tracker"
  ],
  "author": "Financial Bot Developer",
  "license": "MIT",
  "dependencies": {
    "@whiskeysockets/baileys": "^6.7.18",
    "axios": "^1.7.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "fs-extra": "^11.0.0",
    "helmet": "^7.0.0",
    "moment": "^2.29.0",
    "node-cron": "^3.0.0",
    "pg": "^8.11.0",
    "qrcode": "^1.5.0",
    "qrcode-terminal": "^0.12.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}

